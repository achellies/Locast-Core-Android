<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN -->


	
	<style name="Notice_common">
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/bg_message</item>
		<item name="android:textColor">@android:color/primary_text_light</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="Notice" parent="@style/Notice_common">
		<item name="android:drawablePadding">10sp</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textSize">11sp</item>
	</style>
	
	<style name="EmptyList">
		<item name="android:textStyle">italic</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dip</item>
	</style>
	
	<style name="Notice.Info">
		<item name="android:drawableLeft">@drawable/ic_info</item>
	</style>
	

</resources>
